# color, usage: ${RED}xxx${NC}
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
CYAN='\033[0;36m'
NC='\033[0m'

# Functions
cmd() {
    sed -n '/^# anchor$/,/^# end alias$/p' ~/.bashrc | awk '
    BEGIN { 
        color_alias="\033[0;36m";
        color_alias_name="\033[0;32m";
        color_alias_cmd="\033[0;33m";
        reset="\033[0m";
    }
    /^alias/ {
        cmd = $0;
        sub(/^alias[ \t]+/, "", cmd);
        eq_pos = index(cmd, "=");
        if (eq_pos > 0) {
            alias_name = substr(cmd, 1, eq_pos - 1);
            alias_cmd = substr(cmd, eq_pos + 1);
            gsub(/^["'\'']|["'\'']$/, "", alias_cmd);
            printf("%salias %s%-10s%s = %s\"%s\"%s\n", color_alias, color_alias_name, alias_name, reset, color_alias_cmd, alias_cmd, reset);
        }
        next;
    }
    {
        print $0;
    }'
}

tmp() {
    DEFAULT_DIR='/tmp/tmp'
    while getopts "cmh" opt; do
        case ${opt} in
            c )
                target_dir=$2
                target_dir_path="$DEFAULT_DIR/$target_dir"
                mkdir -p $target_dir_path
                echo -e "create dir: ${GREEN}$target_dir_path${NC}"
                return
                ;;
            m )
                target_name=$2
                target_path="$DEFAULT_DIR/$(basename $target_name)"
                if [[ -f "$target_path" ]]; then
                    echo -e "${RED}Error: ${GREEN}$target_path${RED} already exists${NC}"
                    return 1
                fi
                mv $2 $target_path
                if [[ $? -eq 0 ]]; then
                    echo -e "move file: ${GREEN}$2${NC} to ${GREEN}$target_path${NC}"
                else
                    echo -e "${RED}Error: ${GREEN}$2${RED} move failed${NC}"
                fi
                return
                ;;
            h )
                echo -e "Usage: ${GREEN}tmp [-c] [dir]${NC}"
                echo -e "  ${GREEN}tmp [dir]${NC}: create dir and cd"
                echo -e "  ${GREEN}tmp -c [dir]${NC}: create dir but not cd"
                echo -e "  ${GREEN}tmp -m [file path]${NC}: move file"
                echo -e "  ${GREEN}tmp -h${NC}: help"
                return
                ;;
        esac
    done

    if [ $# -eq 0 ]; then
        mkdir -p $DEFAULT_DIR
        cd $DEFAULT_DIR
    elif [ $# -eq 1 ]; then
        mkdir -p $DEFAULT_DIR/$1
        cd $DEFAULT_DIR/$1
    fi
}

tsh() {
    new_shell_script=$1
    if [[ "$new_shell_script" != /* ]]; then
        new_shell_script="$PWD/$new_shell_script"
    fi
    if [[ ! -f "$new_shell_script" ]]; then
        touch $new_shell_script
        chmod +x $new_shell_script
        echo $new_shell_script
    fi
}

clean_history() {
    history -c -w
    echo "" > ~/.bash_history
    kill -9 $$
}

clean_docker() {
    docker rm $(docker ps -a | grep Exited | awk '{ print $1 }') > /dev/null 2>&1
    docker rmi $(docker images | grep -i \<none\> | awk '{ print $3 }') > /dev/null 2>&1
    docker volume prune > /dev/null 2>&1
    docker network prune > /dev/null 2>&1

    docker images; echo ""
    docker ps -a
}

w2u() {
    windows_path_like="$1"
    unix_path=$(echo "$windows_path_like" | sed 's|\\|/|g' | sed 's|^\([a-zA-Z]\):|/\L\1|')
    echo "$unix_path"
}

find_path() {
    current_dir=$(pwd)

    while getopts "fh" opt; do
        case ${opt} in
            f )
                fuzzy_match=true
                ;;
            h )
                echo -e "Usage: ${GREEN}find_path [-f for fuzzy match] [target_path_name]${NC}"
                return 0
                ;;
        esac
    done

    shift $((OPTIND-1))
    
	if [ $# -eq 1 ]; then
		target_dir_name=$1
	fi

    while [[ "$current_dir" != "/" ]]; do
        base_name=$(basename "$current_dir")

        if [[ "$fuzzy_match" == true ]]; then
            if [[ "$base_name" == *"$target_dir_name"* ]]; then
                echo "$current_dir"
                OPTIND=1
                return 0
            fi
        else
            if [[ "$base_name" == "$target_dir_name" ]]; then
                echo "$current_dir"
                return 0
            fi
        fi
        current_dir=$(dirname "$current_dir")
    done

    echo -e "${RED}Error: ${GREEN}$target_dir_name${RED} directory not found${NC}"
    return 1
}

sm() {
    export is_incognito=1
    source ~/.bashrc
    history -c

    incognito_precmd() {
        echo -e "${RED}incognito mode, type ${GREEN}xsm${RED} to exit.${NC}"
    }

    PROMPT_COMMAND="incognito_precmd${PROMPT_COMMAND:+; $PROMPT_COMMAND}"

    xsm() {
        echo -e "${RED}exit incognito mode.${NC}"

        PROMPT_COMMAND="${PROMPT_COMMAND//incognito_precmd/}"
        PROMPT_COMMAND="${PROMPT_COMMAND//;;/;}"
        PROMPT_COMMAND="${PROMPT_COMMAND#;}"
        PROMPT_COMMAND="${PROMPT_COMMAND%;}"

        unset is_incognito
        source ~/.bashrc

        history -a
    }
}

md5() {
    if [[ $# -eq 0 ]]; then
        echo -e "fast md5sum hash generator, usage: ${GREEN}md5 [string | file] [string | file] ...${NC}"
        return 1
    fi

    _echo() {
        echo -e "${RED}$1${NC}: ${GREEN}$2${NC}"
    }
    hash_file() {
        _echo "$1" "$(md5sum "$1" | awk '{print $1}')"
    }
    hash_string() {
        _echo "$1" "$(echo -n "$1" | md5sum | awk '{print $1}')"
    }

    if [[ $# -eq 1 ]]; then
        if [[ -f "$1" ]]; then
            hash_file "$1"
        else
            hash_string "$1"
        fi
    else
        for arg in "$@"; do
            if [[ -f "$arg" ]]; then
                hash_file "$arg"
            else
                hash_string "$arg"
            fi
        done
    fi
}

